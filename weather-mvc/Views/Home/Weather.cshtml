@{ 
    ViewBag.title = "Weather";
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")    
@Styles.Render("~/Content/bootstrap.css")
@Styles.Render("~/Content/weather.css")
        
<body id='body'>
    @using (Html.BeginForm("WeatherAnswer", "home", FormMethod.Post, new {@class = "col-md-4 col-md-offset-4" }))
    {
        <h4>Enter city: </h4> 
         <div class="input-group ">
            @Html.TextBox("location", "", new {@class= "form-control" })
            <span class="input-group-btn"><input type="submit" value="Get weather" class="btn btn-primary" /></span>
        </div>
        <br />
        <p>@Html.RadioButton("timescale", "daily", true) Daily Forecast</p>
        <p>@Html.RadioButton("timescale", "hourly", false) 3 Hour Forecast</p>
    }
</body>

